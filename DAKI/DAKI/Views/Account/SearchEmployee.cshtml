@model IEnumerable<DAKI.Models.UserProfile>
@{
    ViewBag.Title = "Search Employees";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>


<div class="datagrid">
    <table>
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Points
                </th>
                <th>
                    Skills
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "DetailsUser", new { id=item.UserId })
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}